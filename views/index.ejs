<%- include("header") -%>
    <!-- Coursel starts -->
    
    <!-- Crousel ends -->

    <!-- posts -->
    <h1 class="text-center mt-5">Posts</h1>
    <div class="container">
        <div class="card my-3">
            <div class="card-body">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                <a href="#" class="btn btn-primary">Read More &rarr;</a>
            </div>
        </div>
        <% for(i=0; i < subject.length; i++){ %>
            <div class="card my-3">
                <div class="card-body">
                    <h5 class="card-title"><%= subject[i] %></h5>
                    <p class="card-text fifty-chars"><%= desc[i] %></p>
                    <form action="/" method="post">
                        <button type="submit" class="btn btn-primary" value="<%= i %>" name="btn">Read More &rarr;</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>
    <%- include("footer") -%>